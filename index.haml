!!!
%html
	%head
	%meta{:charset=>"utf-8"}
	%title Portfolio
	%link{:href => "css/style.css", :rel => "stylesheet", :type => "text/css"}
	%link{:href => "css/bootstrap.css", :rel => "stylesheet", :type => "text/css"}
	%script{:src => "js/jquery-2.1.3.min.js", :type => "text/javascript"}
	%script{:src => "js/bootstrap.min.js", :type => "text/javascript"}
	%body
		.container-fluid.big-bg
			.row
				/ main
				.col-lg-10.col-md-10.col-sm-10.col-xs-10.col-lg-offset-2.col-md-offset-2.col-sm-offset-2.col-xs-offset-2.main.box
					/ sidebar
					.col-lg-2.col-md-2.col-sm-2.col-xs-2

						/ portfolio
						.col-lg-12.col-md-12.col-sm-12.col-xs-12
						/ contacts
						.col-lg-12.col-md-12.col-sm-12.col-xs-12
						/ about
						.col-lg-12.col-md-12.col-sm-12.col-xs-12


					/ content
					.col-lg-10.col-md-10.col-sm-10.col-xs-10.content

						/ head
						.row
							.col-lg-6.col-md-6.col-sm-6.col-xs-6.head
								%h2.head_text html/css developer

						/ portfolio text
						.row
							.col-lg-12.col-md-12.col-sm-12.col-xs-12
						/ portfolio links
						.row
							.col-lg-12.col-md-12.col-sm-12.col-xs-12
						/ indicators page
						.row
							.col-lg-12.col-md-12.col-sm-12.col-xs-12
						/ footer
						.row
							.col-lg-12.col-md-12.col-sm-12.col-xs-12
